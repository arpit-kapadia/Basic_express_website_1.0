extends layout

block content
	.container
		form(method='post' action='contact/send')
			h2 Contact

			label Name
			input.form-control(type='name' name='name' placeHolde='Enter Your Name')

			label Email
			input.form-control(type='email' name='email' placeHolder='Enter Your Email')

			label Message
			textarea.form-control(type='message' name='message' placeHolder='Write Your Message Here')

			button.btn.btn-default(type='submit') Submit